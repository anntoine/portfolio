.mediaGallery figure,
.mediaGallery .info {
  border: 1px solid #666;
  background: #999;
  padding: 5px;
  border-radius: 5px;
  box-shadow: inset 0 0 1px #fff;
}
.mediaGallery figure {
  display: inline-block;
  vertical-align: top;
  margin: 5px;
  text-align: center;
  height: 130px;
  width: 140px;
  position: relative;
}
.mediaGallery .thumbnail {
  max-width: 140px;
  max-height: 80px;
  margin-bottom: 5px;
}
.mediaGallery .displayInfo {
  position: absolute;
  left: -10000px;
}
.mediaGallery .infoTitle {
  display: inline-block;
  text-align: right;
  width: 110px;
  margin-right: 3px;
  font-weight: bold;
  color: #999;
}
.mediaGallery .popUpContent {
  min-width: 350px;
}
.mediaGallery .imgInfoContainer {
  text-align: center;
  font-size: 60px;
}
.mediaGallery .imgInfoContainer a {
  text-decoration: none;
}
.containerMedia {
  height: 80px;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: contain;
  margin-bottom: 4px;
  font-size: 60px;
  line-height: 80px;
}
.nameMedia {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 8pt;
  text-align: left;
}
